{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "outDir": "out",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "incremental": true
  },
  "include": ["src/**/*.ts"]
}
